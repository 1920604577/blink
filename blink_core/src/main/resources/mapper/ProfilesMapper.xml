<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hln.blink.mapper.ProfilesMapper">

    <sql id="profilesSql">
        id,user_id,height,education_level,occupation,interests_hobbies,self_description,del_flag
    </sql>

    <!-- 添加 -->
    <insert id="addProfiles">
        insert into
            profiles
            (user_id,height,education_level,occupation,interests_hobbies,self_description)
        values
            (#{userId},#{height},#{educationLevel},#{occupation},#{interestsHobbies},#{selfDescription})
    </insert>

    <!-- 根据userId删除个人信息 -->
    <update id="deleteProfilesById">
        update
            profiles
        set
            del_flag = 1
        where
            user_id = #{userId}
        limit 1
    </update>

    <!-- 修改 -->
    <update id="updateProfilesById">
        update
            profiles
        <set>
            <if test="height != null">
                height = #{height},
            </if>
            <if test="educationLevel != null">
                education_level = #{educationLevel},
            </if>
            <if test="occupation != null">
                occupation = #{occupation},
            </if>
            <if test="interestsHobbies != null">
                interests_hobbies = #{interestsHobbies},
            </if>
            <if test="selfDescription != null">
                self_description = #{selfDescription},
            </if>
        </set>
        where
            user_id = #{userId}
        limit 1
    </update>


    <!-- 根据userId查询用户信息 -->
    <select id="queryUserById" resultType="com.hln.blink.pojo.Profiles">
        select
            <include refid="profilesSql"/>
        from
            profiles
        where
            user_id = #{userId}
        limit 1
    </select>

    <!-- 查询所有 -->
    <select id="findAll" resultType="com.hln.blink.pojo.Profiles">
        select
            <include refid="profilesSql"/>
        from
            profiles
        order by
            user_id
    </select>

</mapper>
